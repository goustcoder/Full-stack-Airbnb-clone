<% if(success && success.length > 0){ %>
    <div id="auto-dismiss-alert-success" class="alert alert-success alert-dismissible fade show" 
         style="animation: slideDownAnimation 0.5s ease-in-out; position: fixed; top: 0; left: 50%; transform: translateX(-50%); z-index: 1050; width: 90%; max-width: 500px;" 
         role="alert">
        <%= success %>
    </div>
    <style>
        @keyframes slideDownAnimation {
            0% {
                transform: translateX(-50%) translateY(-100%);
                opacity: 0;
            }
            100% {
                transform: translateX(-50%) translateY(0);
                opacity: 1;
            }
        }
    </style>
    <script>
        setTimeout(() => {
            const alert = document.getElementById('auto-dismiss-alert-success');
            if (alert) {
                alert.classList.remove('show'); 
                setTimeout(() => alert.remove(), 500); 
            }
        }, 2000); 
    </script>
<% } %>

