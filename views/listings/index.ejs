<% layout("/layouts/boilerplate") %>

<body>
 
  <h3 class="text-center mt-4">All Listings</h3>

  <!-- Listings Display Section -->
  <div class="container mt-5">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% for(let listing of allListings) { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image" style="height: 20rem; object-fit: cover;">
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text">
                <strong>Price:</strong> &#x20B9;<%= listing.price.toLocaleString("en-IN") %> / night
                <br>
                <a href="/listing/<%= listing._id %>" class="text-decoration-none text-primary">See details</a>
              </p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- New Entry Button -->
  <div class="text-center mt-5">
    <form method="GET" action="/listing/new">
      <button class="btn btn-success btn-lg shadow-sm " type="submit">
        <i class="bi bi-plus-circle"></i> New Entry
      </button>
    </form>
  </div>

</body>
